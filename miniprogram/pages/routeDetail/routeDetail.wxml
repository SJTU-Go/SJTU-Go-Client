<scroll-view><map id="map" longitude="{{lon}}" latitude="{{lat}}" scale="16" polyline="{{polyline}}" markers="{{markers}}" style="width: 100%; height: 45vh;"></map></scroll-view>


<scroll-view scroll-y style="display: flex; height: 415px;">
	<routeinfo></routeinfo>
	<view wx:if="{{isExtendType}}">
    <view class='toolblock'>
      <view class='downblock'>
				<button class='btn2' bindtap='startTrip'>
					<view>开始行程</view>
				</button>
			</view>
		</view>
	</view>
</scroll-view>